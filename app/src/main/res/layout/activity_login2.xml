<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white"
    android:id="@+id/main">

    <!-- Chat icon group at top -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/applogo"
            android:layout_height="150dp"
            android:contentDescription="@string/chat_icons"
            android:src="@drawable/logo" />
    </LinearLayout>

    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/welcomeText"
        android:text="@string/welcome"
        android:textColor="#2B1810"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/welcomeSubText"
        android:text="@string/we_re_happy_to_see_you_please_login_to_continue"
        android:textColor="#666666"
        android:textSize="16sp" />

    <!-- Login Fields -->
    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_background"
        android:inputType="text"
        android:hint="@string/username"
        android:padding="12dp"
        android:textColorHint="#BBBBBB" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColorHint="#BBBBBB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/forgot_password"
        android:textColor="#6B4F3F"
        android:layout_marginStart="10dp"
        android:textSize="14sp" />

    <!-- Login Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/brown_button_background"
        android:text="@string/login"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:padding="10dp" />

    <!-- Social Login Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orText"
            android:text="@string/or_continue_with"
            android:textColor="#666666" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:id="@+id/googleIcon"
                android:src="@drawable/social"
                android:contentDescription="@string/googleicon"
                android:padding="12dp"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:id="@+id/appleIcon"
                android:src="@drawable/apple"
                android:contentDescription="@string/appleicon"
                android:padding="12dp"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/facebookIcon"
                android:src="@drawable/facebook"
                android:contentDescription="@string/facebookicon"
                android:padding="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Register Link -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dontHaveAccount"
            android:text="@string/don_t_have_an_account"
            android:textColor="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerLink"
            android:text="@string/register"
            android:textColor="#6B4F3F"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>