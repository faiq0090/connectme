<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/homeFragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Community"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A place for all your questions"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/btnSend"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/send"/>

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Profile Section -->
                <HorizontalScrollView
                    android:id="@+id/profilesScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/profilesContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Add Profile Button -->
                        <FrameLayout
                            android:id="@+id/btnAddProfile"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_circle_pink">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:textColor="@android:color/white"
                                android:textSize="24sp"
                                android:layout_gravity="center"/>
                        </FrameLayout>

                        <!-- Profile Avatars -->
                        <ImageView
                            android:id="@+id/ivProfile1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/default_profile"
                            android:background="@drawable/bg_circle_orange"
                            android:padding="1dp"/>

                        <ImageView
                            android:id="@+id/ivProfile2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/default_profile"
                            android:background="@drawable/bg_circle_gray"
                            android:padding="1dp"/>

                        <ImageView
                            android:id="@+id/ivProfile3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/default_profile"
                            android:background="@drawable/bg_circle_blue"
                            android:padding="1dp"/>

                        <ImageView
                            android:id="@+id/ivProfile4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/default_profile"
                            android:background="@drawable/bg_circle_purple"
                            android:padding="1dp"/>
                        <ImageView
                            android:id="@+id/ivProfile5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/default_profile"
                            android:background="@drawable/bg_circle_gray"
                            android:padding="1dp"/>
                        <ImageView
                            android:id="@+id/ivProfile6"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/default_profile"
                            android:background="@drawable/bg_circle_blue"
                            android:padding="1dp"/>

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Post Item -->
                <LinearLayout
                    android:id="@+id/postLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_post"
                    android:orientation="vertical">

                    <!-- Post Header -->
                    <LinearLayout
                        android:id="@+id/postHeaderLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivUserProfile"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/default_profile"
                            android:scaleType="centerCrop"
                            android:padding="2dp"/>

                        <TextView
                            android:id="@+id/tvUsername"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Emily James"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/btnMore"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/more"
                            android:padding="2dp"/>
                    </LinearLayout>

                    <!-- Post Image -->
                    <ImageView
                        android:id="@+id/ivPostImage"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:src="@drawable/hiking"
                        android:scaleType="centerCrop"/>

                    <!-- Post Actions -->
                    <LinearLayout
                        android:id="@+id/actionsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnLike"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/heart"/>

                        <ImageView
                            android:id="@+id/btnComment"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/comment"/>

                        <ImageView
                            android:id="@+id/btnShare"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/send"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/btnSave"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/bookmark"/>
                    </LinearLayout>

                    <!-- Post Caption -->
                    <TextView
                        android:id="@+id/tvCaption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="12dp"
                        android:text="Had a great hike across this beautiful landscape â¤ï¸ðŸŽ¶ðŸžï¸"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>